<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300sp"
    android:layout_height="500sp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_password_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/worksans_regular"
        android:text="Enter password:"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edit_password_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_password_delete"
        android:background="@drawable/rectangle"
        android:labelFor="@id/edit_current_password"
        android:singleLine="true"
        android:textSize="13sp" />

    <Button
        android:id="@+id/button_verify_delete"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_password_delete"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:background="@android:color/black"
        android:fontFamily="@font/worksans_regular"
        android:minHeight="0sp"
        android:text="VERIFY" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:background="@android:color/black"
        android:fontFamily="@font/worksans_regular"
        android:minHeight="0sp"
        android:text="DELETE USER" />



</RelativeLayout>
